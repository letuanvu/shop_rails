<section class="content-header">
  <h1>
    Product manager
    <small>Add product</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Product</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Add product</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_for @product, url: {action: "create"} do |f| %>
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <div class="form-group">
                  <label>Name product</label>
                  <%= f.text_field :name, class:"form-control", required: true, placeholder:"Type name", id: "nameProduct", autofocus: true %>
                </div>
                <div class="form-group">
                  <label>Price ($)</label>
                  <%= f.text_field :price, class:"form-control", required: true, placeholder:"Type price", id: "priceProduct", autofocus: true %>

                </div>
                <div class="text-center form-group">
                  <%= f.submit "Save", class:"btn btn-success btn-sm btn-flat"  %>
                  <a href="/product/list" class="btn btn-sm btn-flat btn-default">Cancel</a>
                </div>
              </div>
            </div>
          <% end %>

        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->

    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>