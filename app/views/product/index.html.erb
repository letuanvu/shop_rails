<section class="content-header">
  <h1>
    Product manager
    <small>List product</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Product</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">List product</h3>
          <div class="pull-right">
            <a href="/product/new/" class="btn btn-flat btn-sm btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Add product</a>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table id="example1" class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Price</th>
              <th>more</th>
            </tr>
            </thead>
            <tbody>
            <% stt = 0 %>
            <% @list.each do |product| %>
              <tr>
                <td><%= stt+=1 %></td>
                <td><%= product.name %></td>
                <td><%= product.price %> $</td>
                <td class="text-center">

                  <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_product_path(product), class:"btn btn-success btn-sm btn-flat" %>

                  <%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, product,
                              :data => {:confirm => "You sure?",
                                        :method => "delete"}, class:"btn btn-danger btn-sm btn-flat" %>

                </td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Price</th>
              <th width="10%">more</th>
            </tr>
            </tfoot>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->

    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>