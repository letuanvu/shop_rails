<!-- new -->
<div class="newproducts-w3agile">
  <div class="container">
    <h3>our products</h3>
    <div class="agile_top_brands_grids">

      <% @list.each do |item| %>

          <div class="col-md-3 top_brand_left-1">
            <div class="hover14 column">
              <div class="agile_top_brand_left_grid">
                <div class="agile_top_brand_left_grid_pos">
                  <%= image_tag "front/offer.png",class:"img-responsive"  %>
                </div>
                <div class="agile_top_brand_left_grid1">
                  <figure>
                    <div class="snipcart-item block">
                      <div class="snipcart-thumb">
                        <a href="products.html"><%= image_tag "front/14.png" %></a>
                        <p><%= item.name %></p>
                        <h4>$<%= item.price %></h4>
                      </div>
                      <div class="snipcart-details top_brand_home_details">
                        <button type="button" data-toggle="modal" data-target="#Cart" value="<%= item.id %>" class="button add_cart open_cart">Add to cart</button>
                      </div>
                    </div>
                  </figure>
                </div>
              </div>
            </div>
          </div>
      <% end %>

      <div class="clearfix"> </div>
    </div>
  </div>
</div>
