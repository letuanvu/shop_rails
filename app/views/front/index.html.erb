<!-- Modal -->
<div class="modal fade" id="Cart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="modal-title" id="myModalLabel" style="color: #FE9126">Your cart</h2>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Number</th>
            <th>Unit price</th>
            <th>Total</th>
            <th>Cancel</th>
          </tr>
          </thead>
          <tbody class="tablecart">

          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <a class="btn btn-warning btn-flat" href="/shop/cart">Create order</a>
      </div>
    </div>
  </div>
</div>
