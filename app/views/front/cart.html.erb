<div class="newproducts-w3agile">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-12">
        <div class="box box-warning">
          <div class="box-header with-border">
            <h3>Cart</h3>
          </div>
            <div class="box-body">
              <div class="col-md-6 col-lg-6">
                <h4 style="padding: 20px" class="text-center">Cart information</h4>

                <table class="table table-striped">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Unit price</th>
                    <th>Total</th>
                    <th>Cancel</th>
                  </tr>
                  </thead>
                  <tbody class="tablecart">

                  </tbody>
                </table>

              </div>
              <div class="col-md-6 col-lg-6">
                <h4 style="padding: 20px" class="text-center">shiping information</h4>

                <div class="form-group">
                  <label>Shiping type</label>
                  <select id="shiping_type" class="form-control">
                    <option value="cod" selected="selected">COD</option>
                  </select>
                </div>
                <div class="form-group">
                  <label>Shiping cost ($)</label>
                  <input type="number" readonly value="3" id="shiping_cost" class="form-control" placeholder="">
                </div>
                <div class="form-group">
                  <label>Adress</label>
                  <select id="adress" class="form-control">
                    <option value="1" selected="selected">Ha Noi</option>
                    <option value="2">Ho Chi Minh</option>
                    <option value="3">Da Nang</option>
                  </select>
                </div>

              </div>

              <div class="row">
                <div class="col-md-12 text-right">
                  <h4>total: <span id="totalcart"></span>&nbsp;&nbsp;&nbsp;&nbsp;</h4>
                </div>
              </div>

            </div>
          <div class="box-footer">
            <div class="col-md-12">
                <button type="button" id="createOrder" class="pull-right btn btn-warning btn-flat"><i class="fa fa-cart-plus" aria-hidden="true"></i> Create Now!</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>